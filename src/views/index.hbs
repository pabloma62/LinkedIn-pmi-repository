<div class="card">

    <div class="card-header bg-dark">
        <h3 class="card-tittle text-white">
            <i class="fas fa-images"></i> Sube una foto
        </h3>
    </div>
    <div class="card-contain">
        <form class="inputimg" action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroupFile">Elige una foto</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Título para la imagen" required>
            </div>
            <div class="form-group">
                <textarea name="description" id="" class="form-control" rows="2" placeholder="Descripción para la imagen" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fas fa-cloud-upload-alt"></i> Subir Foto
                </button>

            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <h3 class="card-header text-white">
        <i class="far fa-image pl-2"></i> Últimas fotos subidas
    </h3>
    {{#image}}
        {{#each this}}
    <div class="card-body">
                <a href="">
                    <img src="../public/upload/{{filename}}" alt="" class="w-100 h-100  img-thumbnail">
                </a>
                {{title}}
                    <hr>
                {{description}}
    </div>
        {{/each}}
    {{/image}}
</div>

